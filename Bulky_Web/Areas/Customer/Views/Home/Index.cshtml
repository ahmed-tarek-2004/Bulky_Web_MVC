@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach (var prodcut in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @* <img src="@prodcut.ImgURL" class="card-img-top rounded"> *@
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 opacity-75 text-uppercase text-center">
                                    @prodcut.Title
                                </p>
                                <p class="card-title text-warning text-center">
                                    by <b>@prodcut.Author</b>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title opacity-75 text-center mb-0">
                                    List Price: <span class="text-decoration-line-through">@prodcut.ListPrice.ToString("c")</span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title opacity-75 text-center">
                                    As low as: <span>@prodcut.Price100.ToString("c")</span>
                                </p>
                            </div>
                            <div>
                                <a asp-controller="Home" asp-action="Details" asp-route-productId="@prodcut.Id" class="btn btn-primary bg-gradient border-0 form-control text-uppercase">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
 
</div>
